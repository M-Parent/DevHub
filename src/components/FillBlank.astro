/**
 * FillBlank Component for DevHub
 * Type in the missing words
 */

interface Props {
  instruction?: string;
  sentence: string; // Use [BLANK:answer] for blanks
}

const { instruction = "Fill in the blanks", sentence } = Astro.props;
const id = `fillblank-${Math.random().toString(36).substr(2, 9)}`;

// Parse sentence to extract blanks and answers
const regex = /\[BLANK:([^\]]+)\]/g;
const parts: { type: 'text' | 'blank'; content: string; answer?: string }[] = [];
let lastIndex = 0;
let match;
let blankIndex = 0;

const tempSentence = sentence;
while ((match = regex.exec(tempSentence)) !== null) {
  if (match.index > lastIndex) {
    parts.push({ type: 'text', content: tempSentence.slice(lastIndex, match.index) });
  }
  parts.push({ type: 'blank', content: '', answer: match[1] });
  lastIndex = match.index + match[0].length;
}
if (lastIndex < tempSentence.length) {
  parts.push({ type: 'text', content: tempSentence.slice(lastIndex) });
}

const answers = parts.filter(p => p.type === 'blank').map(p => p.answer);
---

<div class="fillblank-container" data-id={id} data-answers={JSON.stringify(answers)}>
  <div class="fillblank-header">
    <span class="icon">‚úèÔ∏è</span>
    <p>{instruction}</p>
  </div>

  <div class="sentence-area">
    {parts.map((part, index) => (
      part.type === 'text' 
        ? <span class="text-part">{part.content}</span>
        : <input 
            type="text" 
            class="blank-input" 
            data-blank-index={parts.slice(0, index).filter(p => p.type === 'blank').length}
            placeholder="..."
            autocomplete="off"
          />
    ))}
  </div>

  <div class="fillblank-actions">
    <button class="check-btn" onclick={`checkFillBlank('${id}')`}>
      ‚úì Check Answers
    </button>
    <button class="reveal-btn" onclick={`revealFillBlank('${id}')`}>
      üëÅÔ∏è Show Answers
    </button>
    <button class="reset-btn" onclick={`resetFillBlank('${id}')`}>
      ‚Ü∫ Reset
    </button>
  </div>

  <div class="feedback" id={`feedback-${id}`}></div>
</div>

<script is:inline>
  function checkFillBlank(id) {
    const container = document.querySelector(`[data-id="${id}"]`);
    const answers = JSON.parse(container.dataset.answers);
    const inputs = container.querySelectorAll('.blank-input');
    const feedback = document.getElementById(`feedback-${id}`);
    
    let correct = 0;
    let total = answers.length;

    inputs.forEach((input, index) => {
      const userAnswer = input.value.trim().toLowerCase();
      const correctAnswer = answers[index].toLowerCase();
      
      if (userAnswer === correctAnswer) {
        input.classList.add('correct');
        input.classList.remove('incorrect');
        correct++;
      } else if (userAnswer === '') {
        input.classList.remove('correct', 'incorrect');
      } else {
        input.classList.add('incorrect');
        input.classList.remove('correct');
      }
    });

    if (correct === total) {
      feedback.innerHTML = `<span class="success">üéâ Perfect! All ${total} answers correct!</span>`;
    } else {
      feedback.innerHTML = `<span class="partial">üìä ${correct}/${total} correct. Keep trying!</span>`;
    }
    feedback.classList.add('show');
  }

  function revealFillBlank(id) {
    const container = document.querySelector(`[data-id="${id}"]`);
    const answers = JSON.parse(container.dataset.answers);
    const inputs = container.querySelectorAll('.blank-input');
    const feedback = document.getElementById(`feedback-${id}`);

    inputs.forEach((input, index) => {
      input.value = answers[index];
      input.classList.add('revealed');
      input.classList.remove('correct', 'incorrect');
    });

    feedback.innerHTML = '<span class="info">üí° Answers revealed. Try again to test yourself!</span>';
    feedback.classList.add('show');
  }

  function resetFillBlank(id) {
    const container = document.querySelector(`[data-id="${id}"]`);
    const inputs = container.querySelectorAll('.blank-input');
    const feedback = document.getElementById(`feedback-${id}`);

    inputs.forEach(input => {
      input.value = '';
      input.classList.remove('correct', 'incorrect', 'revealed');
    });

    feedback.classList.remove('show');
  }
</script>

