---
/**
 * Quiz Component for DevHub
 * Multiple choice quiz for knowledge testing
 */

interface Props {
  question: string;
  options: string[];
  correct: number;
  explanation?: string;
}

const { question, options, correct, explanation } = Astro.props;
const id = `quiz-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="quiz-card" data-quiz-id={id}>
  <div class="quiz-header">
    <span class="quiz-icon">üìù</span>
    <p class="quiz-question">{question}</p>
  </div>
  
  <div class="quiz-options">
    {options.map((option, index) => (
      <button 
        class="quiz-option"
        data-correct={index === correct ? "true" : "false"}
        onclick={`
          const card = this.closest('.quiz-card');
          const options = card.querySelectorAll('.quiz-option');
          options.forEach(o => {
            o.disabled = true;
            if (o.dataset.correct === 'true') o.classList.add('correct');
            else if (o === this) o.classList.add('incorrect');
          });
          card.querySelector('.quiz-explanation')?.classList.add('show');
        `}
      >
        <span class="option-letter">{String.fromCharCode(65 + index)}</span>
        <span class="option-text">{option}</span>
      </button>
    ))}
  </div>
  
  {explanation && (
    <div class="quiz-explanation">
      <div class="explanation-label">üí° Explanation:</div>
      <p>{explanation}</p>
    </div>
  )}
</div>

<style>
  .quiz-card {
    background: rgba(17, 24, 39, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    padding: 1.25rem;
    margin: 1.5rem 0;
  }

  .quiz-header {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .quiz-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .quiz-question {
    color: #f9fafb;
    font-weight: 500;
    margin: 0;
    line-height: 1.5;
  }

  .quiz-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .quiz-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    color: #d1d5db;
    cursor: pointer;
    padding: 0.75rem 1rem;
    text-align: left;
    transition: all 0.15s ease;
    width: 100%;
  }

  .quiz-option:hover:not(:disabled) {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    color: #f9fafb;
  }

  .quiz-option:disabled {
    cursor: default;
  }

  .quiz-option.correct {
    background: rgba(34, 197, 94, 0.15) !important;
    border-color: #22c55e !important;
    color: #22c55e !important;
  }

  .quiz-option.incorrect {
    background: rgba(239, 68, 68, 0.15) !important;
    border-color: #ef4444 !important;
    color: #ef4444 !important;
  }

  .option-letter {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    flex-shrink: 0;
  }

  .option-text {
    flex: 1;
  }

  .quiz-explanation {
    display: none;
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(59, 130, 246, 0.1);
    border-left: 3px solid #3b82f6;
    border-radius: 0 6px 6px 0;
  }

  .quiz-explanation.show {
    display: block;
  }

  .explanation-label {
    color: #60a5fa;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .quiz-explanation p {
    color: #e5e7eb;
    margin: 0;
    line-height: 1.6;
  }
</style>
