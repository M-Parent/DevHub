---
/**
 * Flashcard Component for DevHub
 * Interactive flip cards for memorization
 */

interface Props {
  cards: { front: string; back: string }[];
  title?: string;
}

const { cards, title = "Flashcards" } = Astro.props;
const id = `flashcard-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="flashcard-container" data-id={id}>
  <div class="flashcard-header">
    <span class="icon">üÉè</span>
    <h4>{title}</h4>
    <span class="counter">
      <span id={`current-${id}`}>1</span> / {cards.length}
    </span>
  </div>

  <div class="flashcard-deck" id={`deck-${id}`}>
    {cards.map((card, index) => (
      <div 
        class={`flashcard ${index === 0 ? 'active' : ''}`} 
        data-index={index}
        onclick={`flipCard(this)`}
      >
        <div class="card-inner">
          <div class="card-front">
            <p>{card.front}</p>
            <span class="flip-hint">Click to flip</span>
          </div>
          <div class="card-back">
            <p>{card.back}</p>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="flashcard-controls">
    <button class="nav-btn prev" onclick={`prevCard('${id}', ${cards.length})`}>
      ‚Üê Previous
    </button>
    <button class="shuffle-btn" onclick={`shuffleCards('${id}')`}>
      üîÄ Shuffle
    </button>
    <button class="nav-btn next" onclick={`nextCard('${id}', ${cards.length})`}>
      Next ‚Üí
    </button>
  </div>

  <div class="progress-bar">
    <div class="progress-fill" id={`progress-${id}`} style="width: calc(100% / ${cards.length})"></div>
  </div>
</div>

<script is:inline>
  function flipCard(card) {
    card.classList.toggle('flipped');
  }

  function nextCard(id, total) {
    const deck = document.getElementById(`deck-${id}`);
    const cards = deck.querySelectorAll('.flashcard');
    const currentIndex = parseInt(deck.dataset.currentIndex || 0);
    const nextIndex = (currentIndex + 1) % total;
    
    cards[currentIndex].classList.remove('active', 'flipped');
    cards[nextIndex].classList.add('active');
    deck.dataset.currentIndex = nextIndex;
    
    document.getElementById(`current-${id}`).textContent = nextIndex + 1;
    document.getElementById(`progress-${id}`).style.width = `${((nextIndex + 1) / total) * 100}%`;
  }

  function prevCard(id, total) {
    const deck = document.getElementById(`deck-${id}`);
    const cards = deck.querySelectorAll('.flashcard');
    const currentIndex = parseInt(deck.dataset.currentIndex || 0);
    const prevIndex = currentIndex === 0 ? total - 1 : currentIndex - 1;
    
    cards[currentIndex].classList.remove('active', 'flipped');
    cards[prevIndex].classList.add('active');
    deck.dataset.currentIndex = prevIndex;
    
    document.getElementById(`current-${id}`).textContent = prevIndex + 1;
    document.getElementById(`progress-${id}`).style.width = `${((prevIndex + 1) / total) * 100}%`;
  }

  function shuffleCards(id) {
    const deck = document.getElementById(`deck-${id}`);
    const cards = Array.from(deck.querySelectorAll('.flashcard'));
    
    // Reset all cards
    cards.forEach(card => card.classList.remove('active', 'flipped'));
    
    // Shuffle
    for (let i = cards.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      deck.appendChild(cards[j]);
    }
    
    // Activate first
    deck.querySelector('.flashcard').classList.add('active');
    deck.dataset.currentIndex = 0;
    document.getElementById(`current-${id}`).textContent = 1;
    document.getElementById(`progress-${id}`).style.width = `${(1 / cards.length) * 100}%`;
  }
</script>

<style>
  .flashcard-container {
    background: rgba(17, 24, 39, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .flashcard-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .flashcard-header .icon {
    font-size: 1.5rem;
  }

  .flashcard-header h4 {
    color: #f9fafb;
    margin: 0;
    flex: 1;
  }

  .counter {
    color: #6b7280;
    font-size: 0.875rem;
  }

  .flashcard-deck {
    position: relative;
    height: 200px;
    perspective: 1000px;
    margin-bottom: 1rem;
  }

  .flashcard {
    position: absolute;
    width: 100%;
    height: 100%;
    cursor: pointer;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .flashcard.active {
    opacity: 1;
    pointer-events: auto;
  }

  .card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  .flashcard.flipped .card-inner {
    transform: rotateY(180deg);
  }

  .card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }

  .card-front {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .card-back {
    background: linear-gradient(135deg, #065f46 0%, #064e3b 100%);
    border: 1px solid rgba(34, 197, 94, 0.3);
    transform: rotateY(180deg);
  }

  .card-front p, .card-back p {
    color: #f9fafb;
    font-size: 1.125rem;
    font-weight: 500;
    margin: 0;
    line-height: 1.6;
  }

  .flip-hint {
    color: #6b7280;
    font-size: 0.75rem;
    margin-top: 1rem;
  }

  .flashcard-controls {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .nav-btn, .shuffle-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: #9ca3af;
    cursor: pointer;
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
    transition: all 0.15s ease;
  }

  .nav-btn:hover, .shuffle-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #e5e7eb;
  }

  .progress-bar {
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #3b82f6, #22c55e);
    border-radius: 2px;
    transition: width 0.3s ease;
  }
</style>
