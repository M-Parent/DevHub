---
/**
 * CodeChallenge Component for DevHub
 * Interactive code exercise with validation
 */

interface Props {
  title: string;
  description: string;
  language: string;
  starterCode: string;
  solution: string;
  hint?: string;
  testDescription?: string;
}

const { title, description, language, starterCode, solution, hint, testDescription } = Astro.props;
const id = `challenge-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="challenge-container" data-id={id} data-solution={solution}>
  <div class="challenge-header">
    <span class="icon">üíª</span>
    <div class="header-text">
      <h4>{title}</h4>
      <span class="lang-badge">{language}</span>
    </div>
  </div>

  <div class="challenge-description">
    <p>{description}</p>
    {testDescription && <p class="test-desc">‚úì {testDescription}</p>}
  </div>

  <div class="code-editor">
    <div class="editor-header">
      <span class="file-name">solution.{language}</span>
      <div class="editor-actions">
        <button class="copy-btn" onclick={`copyCode('${id}')`}>üìã Copy</button>
        <button class="reset-code-btn" onclick={`resetCode('${id}', \`${starterCode.replace(/`/g, '\\`')}\`)`}>‚Ü∫ Reset</button>
      </div>
    </div>
    <textarea 
      id={`editor-${id}`} 
      class="code-textarea" 
      spellcheck="false"
      autocomplete="off"
      autocorrect="off"
      autocapitalize="off"
    >{starterCode}</textarea>
  </div>

  <div class="challenge-actions">
    {hint && (
      <button class="hint-btn" onclick={`toggleHint('${id}')`}>
        üí° Hint
      </button>
    )}
    <button class="solution-btn" onclick={`showSolution('${id}')`}>
      üëÅÔ∏è Solution
    </button>
    <button class="check-code-btn" onclick={`checkCode('${id}')`}>
      ‚ñ∂Ô∏è Check Code
    </button>
  </div>

  {hint && (
    <div class="hint-box" id={`hint-${id}`}>
      üí° <strong>Hint:</strong> {hint}
    </div>
  )}

  <div class="feedback" id={`feedback-${id}`}></div>
</div>

<script is:inline>
  function copyCode(id) {
    const textarea = document.getElementById(`editor-${id}`);
    navigator.clipboard.writeText(textarea.value);
    
    const btn = document.querySelector(`[data-id="${id}"] .copy-btn`);
    btn.textContent = '‚úì Copied!';
    setTimeout(() => btn.textContent = 'üìã Copy', 2000);
  }

  function resetCode(id, starterCode) {
    const textarea = document.getElementById(`editor-${id}`);
    textarea.value = starterCode;
    textarea.classList.remove('correct', 'incorrect');
    document.getElementById(`feedback-${id}`).classList.remove('show');
  }

  function toggleHint(id) {
    const hintBox = document.getElementById(`hint-${id}`);
    hintBox.classList.toggle('show');
  }

  function showSolution(id) {
    const container = document.querySelector(`[data-id="${id}"]`);
    const textarea = document.getElementById(`editor-${id}`);
    const feedback = document.getElementById(`feedback-${id}`);
    
    textarea.value = container.dataset.solution;
    textarea.classList.add('revealed');
    
    feedback.innerHTML = '<span class="info">üí° Solution revealed. Study it and try again on your own!</span>';
    feedback.classList.add('show');
  }

  function checkCode(id) {
    const container = document.querySelector(`[data-id="${id}"]`);
    const textarea = document.getElementById(`editor-${id}`);
    const feedback = document.getElementById(`feedback-${id}`);
    
    const userCode = textarea.value.trim().replace(/\s+/g, ' ');
    const solution = container.dataset.solution.trim().replace(/\s+/g, ' ');
    
    // Simple comparison (can be enhanced)
    if (userCode === solution) {
      textarea.classList.add('correct');
      textarea.classList.remove('incorrect', 'revealed');
      feedback.innerHTML = '<span class="success">üéâ Correct! Your code matches the solution.</span>';
    } else {
      textarea.classList.add('incorrect');
      textarea.classList.remove('correct', 'revealed');
      feedback.innerHTML = '<span class="error">‚ùå Not quite right. Check your code and try again!</span>';
    }
    feedback.classList.add('show');
  }
</script>

<style>
  .challenge-container {
    background: rgba(17, 24, 39, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .challenge-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .challenge-header .icon {
    font-size: 1.5rem;
  }

  .header-text {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
  }

  .challenge-header h4 {
    color: #f9fafb;
    margin: 0;
  }

  .lang-badge {
    background: rgba(139, 92, 246, 0.2);
    border: 1px solid rgba(139, 92, 246, 0.4);
    border-radius: 4px;
    color: #a78bfa;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    text-transform: uppercase;
  }

  .challenge-description {
    margin-bottom: 1rem;
  }

  .challenge-description p {
    color: #d1d5db;
    margin: 0 0 0.5rem 0;
    line-height: 1.6;
  }

  .test-desc {
    color: #22c55e !important;
    font-size: 0.875rem;
  }

  .code-editor {
    background: #0c1018;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .editor-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    padding: 0.5rem 1rem;
  }

  .file-name {
    color: #6b7280;
    font-size: 0.75rem;
    font-family: monospace;
  }

  .editor-actions {
    display: flex;
    gap: 0.5rem;
  }

  .copy-btn, .reset-code-btn {
    background: transparent;
    border: none;
    color: #6b7280;
    cursor: pointer;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    transition: color 0.15s ease;
  }

  .copy-btn:hover, .reset-code-btn:hover {
    color: #e5e7eb;
  }

  .code-textarea {
    background: transparent;
    border: none;
    color: #e5e7eb;
    font-family: 'Fira Code', 'Monaco', 'Consolas', monospace;
    font-size: 0.875rem;
    line-height: 1.6;
    min-height: 150px;
    padding: 1rem;
    resize: vertical;
    width: 100%;
    tab-size: 2;
  }

  .code-textarea:focus {
    outline: none;
  }

  .code-textarea.correct {
    background: rgba(34, 197, 94, 0.05);
  }

  .code-textarea.incorrect {
    background: rgba(239, 68, 68, 0.05);
  }

  .code-textarea.revealed {
    background: rgba(59, 130, 246, 0.05);
    color: #60a5fa;
  }

  .challenge-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .hint-btn, .solution-btn, .check-code-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: #9ca3af;
    cursor: pointer;
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
    transition: all 0.15s ease;
  }

  .hint-btn:hover {
    background: rgba(251, 191, 36, 0.15);
    border-color: #fbbf24;
    color: #fbbf24;
  }

  .solution-btn:hover {
    background: rgba(59, 130, 246, 0.15);
    border-color: #3b82f6;
    color: #60a5fa;
  }

  .check-code-btn {
    background: rgba(34, 197, 94, 0.1);
    border-color: rgba(34, 197, 94, 0.3);
    color: #22c55e;
  }

  .check-code-btn:hover {
    background: rgba(34, 197, 94, 0.2);
    border-color: #22c55e;
  }

  .hint-box {
    display: none;
    background: rgba(251, 191, 36, 0.1);
    border-left: 3px solid #fbbf24;
    border-radius: 0 6px 6px 0;
    color: #fbbf24;
    margin-top: 1rem;
    padding: 0.75rem 1rem;
  }

  .hint-box.show {
    display: block;
  }

  .feedback {
    display: none;
    margin-top: 1rem;
    padding: 0.75rem 1rem;
    border-radius: 6px;
  }

  .feedback.show {
    display: block;
  }

  .feedback .success {
    color: #22c55e;
  }

  .feedback .error {
    color: #ef4444;
  }

  .feedback .info {
    color: #60a5fa;
  }
</style>
